import java.util.PriorityQueue;
import java.util.Queue;

public class PriorityQueueDemo {
    public static int numbeOfPeople(int[] breadPerPerson, int breadInStore){
        int countPeople = 0;
        Queue<Integer> queue = new PriorityQueue<>(); // Using PriorityQueue instead of LinkedList
        for (int bread : breadPerPerson){
            queue.offer(bread);
        }
        while (!queue.isEmpty() && breadInStore >= queue.peek()){ // Check that breadInStore >= the smallest bread amount in the queue
            int breadPerCurrentPerson = queue.poll();
            breadInStore -= breadPerCurrentPerson;
            countPeople++;
        }
        return countPeople;
    }

    public static void main(String[] args) {
        int[] breadPerPerson = {3, 1, 9, 8, 6};
        int breadInStore = 15;
        System.out.println(numbeOfPeople(breadPerPerson, breadInStore) + " people can buy bread.");
    }
}
