import java.util.Scanner;

public class Substring {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Please enter the string: ");
        String string = sc.nextLine();
        System.out.println("Please enter the substring: ");
        String sub = sc.nextLine();
        int index = substring(string, sub);
        if (index == -1) {
            System.out.println("The substring was not found in the string.");
        } else {
            System.out.println("The substring was found at index " + index + " in the string.");
        }
    }

    public static int substring(String string, String sub) {
        int index = string.indexOf(sub);
        return index;
    }
}
