import java.util.Scanner;

public class MixedStrings {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Please enter a sentence: ");
        String sentence = sc.nextLine();
        String[] mixed = mixedStrings(sentence);
        print(mixed);
    }

    public static String[] mixedStrings(String sentence) {
        String[] words = sentence.split(" ");
        for (int i = 0; i < words.length; i++) {
            if (words[i].length() > 1) {
                char first = words[i].charAt(0);
                char last = words[i].charAt(words[i].length() - 1);
                words[i] = last + words[i].substring(1, words[i].length() - 1) + first;
            }
        }
        return words;
    }

    public static void print(String[] mixed) {
        for (int i = 0; i < mixed.length; i++) {
            System.out.print(mixed[i] + " ");
        }
    }
}
