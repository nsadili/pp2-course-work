public class ArrayOfInvoices {
    public static void main(String[] args) {
        // Take from the user some information about a few invoices
        Scanner scanner = new Scanner(System.in);
        System.out.println("Enter the number of invoices: ");
        int n = scanner.nextInt();
        Invoice[] invoices = new Invoice[n];
        for (int i = 0; i < n; i++) {
            System.out.println("Enter the item number for invoice " + (i + 1) + ": ");
            int itemNumber = scanner.nextInt();
            System.out.println("Enter the item description for invoice " + (i + 1) + ": ");
            String itemDescription = scanner.next();
            System.out.println("Enter the item quantity for invoice " + (i + 1) + ": ");
            int itemQuantity = scanner.nextInt();
            System.out.println("Enter the item price for invoice " + (i + 1) + ": ");
            double itemPrice = scanner.nextDouble();
               // Create an Invoice object
            Invoice invoice = new Invoice(itemNumber, itemDescription, itemQuantity, itemPrice);
            invoices[i] = invoice;
        }

        // Calculate invoice amount per each invoice item
        System.out.println("Invoice Amounts: ");
        for (Invoice invoice : invoices) {
            double amount = invoice.getInvoiceAmount();
            System.out.println("Invoice amount for item " + invoice.getItemNumber() + ": " + amount);
        }
    }
}